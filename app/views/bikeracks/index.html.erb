<div class="request-view page full" style="display: block;">
  <header>
    <div class="logo"></div>
    <a href="#" class="btn left account"></a>
  </header>

  <div class="background-view"></div>

  <div class="map-view">
    <div class="location-bar">
      <p class="pickup-location">
        <small>Nearest bike parking</small>
        <span id="nearest_bike_parking"></span>
      </p>
      <a href="#" class="btn search"></a>
      <a href="#" class="btn center"></a>
    </div>
    <div class="trip-status-bar">
      <p>Pro Tip</p>
      <span></span>
    </div>
    <div class="map-wrap">
      <div id="map" style="position: relative; background-color: rgb(229, 227, 223); overflow: hidden;"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var directionsDisplay = new google.maps.DirectionsRenderer();
  var directionsService = new google.maps.DirectionsService();

  var x = 0;
  var y = 0;
  var bounds;

  var handler = Gmaps.build('Google');

  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(displayOnMap);
  }
  else {
    // $TODO: try to use geolocation by IP
  }

  function displayOnMap(position)
  {
    x = position.coords.latitude;
    y = position.coords.longitude;

    //x = 47.6130609;
    //y = -122.340035;

    calcRoute();

    handler.buildMap({
      provider: {
        mapTypeId: google.maps.MapTypeId.ROADMAP
      },
      internal: {
        id: 'map'
      }
    },
    function() {
        directionsDisplay.setMap(handler.getMap());
        //handler.fitMapToBounds();
    });
  }

function calcRoute() {
  $.ajax({
    type: 'POST',
    url: "http://localhost:3000/bikerack",
    data: { 'longitude': y, 'latitude': x },
    dataType: "json",
    xhrFields: {withCredentials: true},
    crossDomain: true,
    success: callback,
  });
}

function callback(response)
{
  bounds = new google.maps.LatLngBounds();

  var origin = new google.maps.LatLng(x, y);
  bounds.extend(origin);

  var destination = new google.maps.LatLng(response[0]["latitude"], response[0]["longitude"]);
  bounds.extend(destination);

  $('#nearest_bike_parking').html(response[0].name);

  var otherRacks = new Array();

  for (var i = 1; i < response.length; i++) {
    otherRacks.push(
      {
        lat: response[i].latitude,
        lng: response[i].longitude,
        infowindow: response[i].name
      });

    point = new google.maps.LatLng(response[i].latitude, response[i].longitude);
    bounds.extend(point);
  }

  handler.buildMap(
    {
      provider: {},
      internal: { id: 'map' }
    },
    function() {
      markers = handler.addMarkers(
        otherRacks,
        {
          draggable: false,
          animation: google.maps.Animation.DROP
        });
      //handler.bounds.extendWith(markers);
      //handler.fitMapToBounds();
    });

  var request = {
      origin: origin,
      destination: destination,
      travelMode:  google.maps.TravelMode.BICYCLING
  };

  handler.getMap().fitBounds(bounds);

  directionsService.route(request, function(response, status) {
    if (status == google.maps.DirectionsStatus.OK) {
      directionsDisplay.setOptions({ preserveViewport: true });
      directionsDisplay.setDirections(response);
    }
  });
}
</script>